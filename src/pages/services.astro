---
import Layout from '~/layouts/PageLayout.astro';

import Hund3 from '~/components/widgets/Hund3.astro';
import Bread from '~/components/widgets/Bread.astro';

import ServicesCollection2 from '~/components/services/ServicesCollection2.astro';
import Checkbox from '~/components/common/Checkbox.astro';
import UserStory from '~/components/services/UserStory.astro';

import { getPermalink } from '~/utils/permalinks';
import { getEntry } from 'astro:content';

const metadata = {
  canonical: 'https://sobakapav.ru/services',
  title: `Услуги UX-дизайна • Заказать дизайн интерфейса, UX-исследование`,
  description:
    'Что мы можем для вас сделать. Интерфейсы сложных систем. Рабочие места, дашборды, мобильные приложения, системы мониторинга, личные кабинеты, интерфейсы для hardware. Под ключ или точечно, наброски или тщательная проработка, независимо или внутри вашей команды.',
  robots: {
    index: true,
    follow: true,
  },
  openGraph: {
    site_name: 'Собака Павлова',
    images: [
      {
        url: '~/assets/images/services.png',
        width: 1200,
        height: 630,
      },
    ],
    type: 'website',
  },
};
---

<Layout metadata={metadata}>
  <Bread title="Услуги" />

  <!-- Hund3 Widget ******************* -->

  <Hund3>
    <Fragment slot="title"> Что мы можем для вас сделать? </Fragment>

    <Fragment slot="subtitle">
      Интерфейсы сложных систем. Рабочие места, дашборды, мобильные приложения, системы мониторинга, личные кабинеты,
      интерфейсы для hardware. Под ключ или точечно, наброски или тщательная проработка, независимо или внутри вашей
      команды.
    </Fragment>
  </Hund3>

  <ServicesCollection2
    list={[
      'ux-design',
      'redesign',
      'new-features',
      'prototype',
      'ui-redesign',
      'research',
      'ux-audit',
      'dev-team',
      'product-team',
      'consultation',
      'content-design',
    ]}
  />
</Layout>
