---
import Layout from '~/layouts/PageLayout.astro';

import Hund3 from '~/components/widgets/Hund3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Features from '~/components/widgets/Features.astro';
import Stats from '~/components/widgets/Stats.astro';
import Features3 from '~/components/widgets/Features3.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Brands from '~/components/widgets/Brands.astro';
import ServicesCollection from '~/components/services/ServicesCollection.astro';
import Checkbox from '~/components/common/Checkbox.astro';
import UserStory from '~/components/services/UserStory.astro';

import { getPermalink } from '~/utils/permalinks';
import { getEntry } from 'astro:content';

import YoutubeVideo from '~/components/common/YoutubeVideo.astro';

const metadata = {
  canonical: 'https://sobakapav.ru/services',
  title: `Что мы можем для вас сделать • Услуги «Собаки Павловой»`,
  description: "100+ статей о UX-дизайне, исследовании пользователей и управлении проектами. Делимся знаниями и опытом, предлагаем лайфхаки и решения.", 
  robots: {
    index: blogListRobots?.index && currentPage === 1,
    follow: blogListRobots?.follow,
  },
  openGraph: {
    site_name: 'Собака Павлова',
    images: [{
      url: ''~/assets/images/services/turnkey/ux-design.png'',
      width: 716,
      height: 600
    }],
    type: 'website',
  },
};


---

<Layout metadata={metadata}>

   <Bread
      title={post.title}
   />
  
  <!-- Hero Widget ******************* -->

  <Hund3
    tagline=""
    actions={[
      {
        variant: 'primary',
        target: '_blank',
        text: 'Get templates',
        href: 'https://github.com/onwidget/astrowind',
        icon: 'tabler:download',
      },
      { text: 'Learn more', href: '#features' },
    ]}
  >
    <Fragment slot="title">
      Что мы можем для вас сделать?
    </Fragment>

    <Fragment slot="subtitle">
        Всё, что связано с интерфейсами и пользовательским опытом: вместе с вами создаём UI/UX-решения, которые выводят взаимодействие с вашими клиентами на новый уровень.  
    </Fragment>
    
    <Fragment slot="content">
          <UserStory />
    </Fragment>

  </Hund3>
    
 <ServicesCollection list={['ux-design', 'prototype', 'redesign', 'ui-redesign', 'new-features', 'ux-audit', 'research', 'dev-team', 'product-team', 'consultation', 'content-design']} />
 
 </Layout>
    
    
