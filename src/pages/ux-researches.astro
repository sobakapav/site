        pages={[{collection: 'portfolio', page: 'medmarket'}, {collection: 'portfolio', page: 'gazprom-neft'}, {collection: 'portfolio', page: 'avito'}, {collection: 'portfolio', page: 'bercut'}, {collection: 'portfolio', page: 'qiwi'}, {collection: 'portfolio', page: 'sportmaster'} ]}
