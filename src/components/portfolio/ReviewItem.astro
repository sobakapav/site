---

import Image from '~/components/common/Image.astro';
import { Markdown } from '@astropub/md';
import { twMerge } from "tailwind-merge";

const { title, text, photo, person, position, styles={heading: ''} } = Astro.props;

---
<Fragment>
  <h3 class={twMerge('w-full text-xl sm:text-4xl xl:text-[52px] xl:leading-[52px] font-heading', styles.heading)}>{title}</h3>
  <div class="flex flex-row max-w-full gap-4 mb-6">
    { photo && (
      <Image src={photo} alt={person || title} width={90} height={90} class="rounded-lg mt-1"/>
    )}
    <div class="flex flex-col gap-0 format-review-markdown">
      <div>
        <Markdown.Inline of={text}/>
      </div>
      <div class="text-sm mt-2">{person}</div>  
      <div class="text-sm">{position}</div> 
    </div>
  </div>
</Fragment>
