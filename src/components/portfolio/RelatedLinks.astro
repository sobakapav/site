---
import { APP_BLOG } from "astrowind:config";

import { fetchPosts, getRelatedPosts } from "~/utils/blog";
import HighlightedCases from "../portfolio/HighlightedCases.astro";
import type { Post } from "~/types";
import { getBlogPermalink } from "~/utils/permalinks";

export interface Props {
  post: Post;
}

const { post } = Astro.props;

---

{
  post.relatedPages ? (
    <HighlightedCases
      classes={{ container: "pt-0 lg:pt-0 md:pt-0  max-w-2xl xl:max-w-7xl mx-auto px-4 sm:px-6 my-5 sm:mt-16 related-posts" }}
      title={post.relatedLinks?.title || "Примеры проектов"}
      links={post.relatedLinks?.links || []}
      collection="portfolio"
    />
  ) : null
}
