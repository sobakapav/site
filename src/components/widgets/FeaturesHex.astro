---
import Headline from '~/components/ui/Headline.astro';
import ItemGrid from '~/components/ui/ItemGrid.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Image from '~/components/common/Image.astro';
import type { Features as Props } from '~/types';

import './FeaturesHex.less';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  image,
  items = [],
  defaultIcon,
  isBeforeContent,
  isAfterContent,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

var titledItems = [{title, description: subtitle, classes: {
                     title: 'text-xl md:text-[70px] font-heading leading-none mb-1',
                     description: 'text-base',
                   }}, ...items];

---

<WidgetWrapper
  id={id}
  isDark={isDark}
  containerClass={`${isBeforeContent ? 'md:pb-8 lg:pb-12' : ''} ${isAfterContent ? 'pt-0 md:pt-0 lg:pt-0' : ''} ${
    classes?.container ?? ''
  }`}
  bg={bg}
>
  <ItemGrid
    items={ titledItems }
    columns={ 3 }
    defaultIcon={defaultIcon}
    classes={{
      container: 'features-block gap-6 gap-y-6 md:gap-y-6 features-hex',
      panel: 'max-w-full flex',
      title: 'text-3xl font-heading leading-none',
      description: 'mt-1',
      icon: 'flex-shrink-0 mt-1 text-[#B5BFBF] w-6 h-6',
      ...((classes?.items as {}) ?? {}),
    }}
  />
</WidgetWrapper>
