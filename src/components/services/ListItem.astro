---
import type { ImageMetadata } from 'astro';
import { Icon } from 'astro-icon/components';
import Image from '~/components/common/Image.astro';
import PostTags from '~/components/blog/Tags.astro';
import { Markdown } from '@astropub/md';

import { APP_BLOG } from 'astrowind:config';
import type { Post } from '~/types';

import { getPermalink } from '~/utils/permalinks';
import { findImage } from '~/utils/images';
import { getFormattedDate, minuteCase } from '~/utils/utils';

export interface Props {
  post: Post;
}

const { post } = Astro.props;
const image = (await findImage(post.thumbnail || post.image)) as ImageMetadata | undefined;

---

<article class="flex flex-wrap justify-normal blog-list-item">
  {
    image && (
      <a href={post.href ?? 'javascript:void(0)'}>
        <div class="w-72 h-auto">
          <div style="width: 288px; height: 288px;" class="overflow-hidden rounded">
            {image && (
                          <Image
                            src={image}
                            alt={post.imageAlt}
                            layout="constrained-both"
                            width={288}
                            loading="lazy"
                            decoding="async"
                          />
                        )}
          </div>
        </div>
      </a>
    )
  }
  <div class="mt-2 w-72">
    <header>
      <h2 class="text-xl sm:text-4xl leading-none mb-2 dark:text-slate-300 font-heading">
        {
          post.href ? (
            <a class="hover:underline dark:hover:underline" href={post.href}>
              <Markdown.Inline of={post.title} />
            </a>
          ) : (
            post.title
          )
        }
      </h2>
    </header>
    {
        post.href ? (
          <a class="hover:underline dark:hover:underline flex-grow dark:text-slate-400 text-base" href={post.href}>
            <h4 class="text-lg font-semibold">Когда</h4><p class="text-muted">{(post.pain)}</p>
          </a>
        ) : (
          (post.pain)
        )
    }
    
    {
        post.href ? (
          <a class="hover:underline dark:hover:underline flex-grow dark:text-slate-400 text-base" href={post.href}>
            <h4 class="text-lg font-semibold">Вы получите</h4><p class="text-muted">{(post.excerpt)}</p>
          </a>
        ) : (
          (post.excerpt)
        )
      }
   
    {post.tags && <footer class="mt-5">
      <PostTags tags={post.tags} />
    </footer> }
  </div>
</article>
