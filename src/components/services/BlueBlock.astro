         <a href="https://sobakapav.ru/portfolio/sberbank"><img src="/images/services/sberbank.svg" class="noir h-[26px]"></a>  
         <a href="https://sobakapav.ru/portfolio"><img src="/images/services/yandex.svg" class="noir h-[26px]"></a>
         <a href="https://sobakapav.ru/portfolio/tinkoff"><img src="/images/services/tinkoff.svg" class="noir h-[26px]"></a>
         <a href="https://sobakapav.ru/portfolio/gazprom-neft"><img src="/images/services/gazprom.svg" class="noir h-[35px]"></a>
         <a href="https://sobakapav.ru/portfolio/sportmaster"><img src="/images/services/sportmaster.svg" class="noir h-[24px]"></a>
         <a href="https://sobakapav.ru/portfolio/avito"><img src="/images/services/avito.svg"  class="noir h-[26px]"></a>
         <a href="https://sobakapav.ru/portfolio/alfastrah-design"><img src="/images/services/alfa-strah.svg" class="noir h-[26px]"></a>
         <a href="https://sobakapav.ru/portfolio/edms"><img src="/images/services/baltika.svg" class="noir h-[26px]"></a>   
         <a href="https://sobakapav.ru/microcases/Yota"><img src="/images/services/yota.svg" class="noir h-[30px]"></a>        
    </div>
  </div>
  
</div>
