---

import SimpleContentSlider from '~/components/services/SimpleContentSlider.astro';

const {
  slides, 
  mode, 
  title='Особенности'
} = Astro.props;

if (slides.length != 4) {
  console.error('Должно быть 4 слайда');
}
---

<SimpleContentSlider
  mode={mode}
  title={title}
  blockTitles={[{title: slides[0].title, text: slides[0].text}, {title: slides[1].title, text: slides[1].text}, {title: slides[2].title, text: slides[2].text}, {title: slides[3].title, text: slides[3].text}]}
>
  <Fragment slot="block1">
    <img src={slides[0].img} alt={slides[0].alt} class:list={["img", "img-position-" + (slides[0].imgPosition || 'middle')]}>
  </Fragment>
  <Fragment slot="block2">
    <img src={slides[1].img} alt={slides[1].alt} class:list={["img", "img-position-" + (slides[1].imgPosition || 'middle')]}>
  </Fragment>
  <Fragment slot="block3">
    <img src={slides[2].img} alt={slides[2].alt} class:list={["img", "img-position-" + (slides[2].imgPosition || 'middle')]}>
  </Fragment>
  <Fragment slot="block4">
    <img src={slides[3].img} alt={slides[3].alt} class:list={["img", "img-position-" + (slides[3].imgPosition || 'middle')]}>
  </Fragment>
</SimpleContentSlider>
