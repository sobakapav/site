---
import '@fontsource-variable/inter';
import '~/assets/styles/colors.css';
// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist

---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter';
    --aw-font-serif: 'Inter';
    --aw-font-heading: 'Inter';

    --aw-color-primary: rgb(1 97 239);
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: #048E86;

    --aw-color-text-heading: 'Inter';
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Inter';
    --aw-font-serif: 'Inter';
    --aw-font-heading: 'Inter';

    --aw-color-primary: rgb(1 97 239);
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(3 6 32);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
  
  .bg-accent {
    background-color: var(--aw-color-accent);
  }
  
  .format-subtitle-markdown a {
    text-decoration: underline;
    color: var(--dark-4);
  }

  .format-subtitle-markdown p {
    margin-top: 12px;
    margin-bottom: 12px;
  }

  .format-subtitle-markdown h2 {
    margin-bottom: 24px;
  }
  
  .format-markdown a {
    text-decoration: underline;
    color: var(--dark-4);
  }

  .format-markdown p {
      margin-top: 12px;
      margin-bottom: 12px;
    }
    
  @media (min-width: 768px) {
    .format-markdown p,
    .format-markdown ul,
    .format-markdown ol {
      font-size: 20px;
    }
  }
  
  .format-markdown img + em {
    display: inline-block;
    font-size: 16px;
    line-height: 20px;
    color: var(--grey-3);
    font-style: normal;
    margin-bottom: 1.5em;
  }
  
  @media (min-width: 1024px) {
      .format-markdown img {
          margin-top: 1.5em;
          margin-bottom: 1em;
      }
  }
  
  .related-posts li {
    list-style: none;
  }
  
</style>
