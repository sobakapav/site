---
import { twMerge } from "tailwind-merge";

const {
  id,
  label,
  type = 'checkbox',
  group,
  className = '',
  classLabel = 'px-4 py-[9px]',
  checked = false
} = Astro.props;

const aClassName = twMerge(className, 'hidden');
const checkmark = checked ? {checked: "true"} : {}

---

<astro-checkbox class="inline-block">
  <input
    id={id}
    name={type == 'radio' ? (group || id) : id}
    type={type}
    class={aClassName}
    {...checkmark}
    />
  <label for={id} class:list={[twMerge("bg-[#E6E6E6] inline-flex items-center hover:cursor-pointer pl-2 rounded-sm", classLabel)]}>
    <span class="color-[#C4C4C4] hover:text-[--aw-color-hund]">
      {label}
    </span>
    <slot />
  </label>
</astro-checkbox>
