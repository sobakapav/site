---

const {
  id,
  label,
  className = []
} = Astro.props;

const aClassName = className + ' hidden';

---

<astro-checkbox>
  <input
    id={id}
    name={id}
    type="checkbox"
    class={aClassName}
    />
  <label
    for={id}
    class="bg-[--aw-color-bg-page] dark:bg-slate-700 inline-block h-9 px-4 py-[9px]"
  >
    <span class="text-muted dark:text-slate-300 hover:text-primary dark:hover:text-gray-200">
      {label}
    </span>
  </label>
</astro-checkbox>
