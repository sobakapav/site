---

const {
  id,
  label,
  className = []
} = Astro.props;

const aClassName = className + ' hidden';

---

<astro-checkbox>
  <input
    id={id}
    name={id}
    type="checkbox"
    class={aClassName}
    />
  <label
    for={id}
    class="bg-gray-100 dark:bg-slate-700 inline-block mr-2 rtl:mr-0 rtl:ml-2 mb-2 py-0.5 px-2 font-medium"
  >
    <span class="text-muted dark:text-slate-300 hover:text-primary dark:hover:text-gray-200">
      {label}
    </span>
  </label>
</astro-checkbox>
